<?xml version="1.0" encoding="utf-8"?>
<com.boringdroid.systemui.view.RightClickView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_click_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/all_apps_item_height"
    android:layout_gravity="center"
    android:gravity="center|left"
    android:layout_marginStart="@dimen/all_apps_item_spacing_horizontal"
    android:layout_marginEnd="@dimen/all_apps_item_spacing_horizontal"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/all_apps_padding_horizontal"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/app_info_icon"
        android:layout_width="@dimen/app_info_icon_size"
        android:layout_height="@dimen/app_info_icon_size"
        android:layout_gravity="center"
        android:src="@mipmap/default_icon_round"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/app_info_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_info_icon_height"
        android:layout_gravity="center"
        android:ellipsize="middle"
        android:textColor="@color/black"
        android:alpha="0.88"
        android:gravity="center|left"
        android:singleLine="true"
        android:text="test"
        android:paddingLeft="@dimen/all_apps_window_margin_horizontal"
        android:textSize="@dimen/app_info_name_text_size" />
</com.boringdroid.systemui.view.RightClickView>