<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/all_apps_item_height"
    android:orientation="vertical"
    android:id="@+id/layoutWifiInfo"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:paddingRight="16dp"
        android:layout_gravity="left|center">

        <ImageView
            android:id="@+id/imgWifi"
            android:src="@mipmap/icon_wifi_all"
            android:layout_width="36dp"
            android:padding="6dp"
            android:background="@drawable/circle_light_grep"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/fde_left_setting_padding_size"
            android:layout_alignParentLeft="true"
            android:layout_height="36dp"/>

        <TextView
            android:id="@+id/txtWifiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wifi1"
            android:layout_toRightOf="@id/imgWifi"
            android:drawablePadding="16dp"
            android:layout_centerVertical="true"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtWifiType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5g"
            android:layout_marginLeft="4dp"
            android:background="@drawable/rounded_rectangle"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txtWifiName"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="24dp"
            android:paddingLeft="16dp"
            android:src="@mipmap/icon_lock"
            android:layout_alignParentRight="true"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/txtContentText"
            android:text="@string/fde_connecting"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="24dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_marginHorizontal="16dp"
        android:background="#f2f2f2" />

</LinearLayout>