<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/control_info_width"
    android:layout_height="@dimen/control_info_height">

    <TextView
        android:id="@+id/textView"
        android:textSize="@dimen/control_text_size"
        android:textColor="@color/control_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_control_icon"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_wifi"
            android:scaleType="fitCenter"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>